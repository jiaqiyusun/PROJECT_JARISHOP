<div class="nested-fields">
    <%= f.hidden_field :_destroy %>
    <div>
        <%= f.label :size %>
        <%= f.select :size_id, options_for_select([""])%>

    </div>
    <div>
        <%= f.label :color %>
        <%= f.select(:color_id, options_for_select(@colors)) %>

    </div>
    <div>
        <%= f.label :amount %>
        <%= f.text_field :amount %>
    </div>
    <div>
        <%= link_to "Remove", '#', class: "remove_fields" %>
    </div>
</div>